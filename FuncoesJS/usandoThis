function calculaIdade(anos) {
	return `Daqui a ${anos} anos, ${this.nome} ter√° ${
		this.idade + anos
	} anos de idade.`;
}

const pessoa1 = {
	nome: 'Amelia',
	idade: 23,
};

const pessoa2 = {
	nome: 'Carla',
	idade: 26,
};

const pessoa3 = {
	nome: 'Jonas',
	idade: 13,
};

console.log(calculaIdade.call(pessoa2, 30));
